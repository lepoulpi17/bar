generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  employe
  admin
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         UserRole @default(employe)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt

  auditLogs AuditLog[]

  @@index([email])
}

enum AuditAction {
  user_created
  user_updated
  user_deleted
  ingredient_created
  ingredient_updated
  ingredient_deleted
  cocktail_created
  cocktail_updated
  cocktail_deleted
  stock_created
  stock_updated
  stock_deleted
  stock_movement
  bar_availability_updated
  login_success
  login_failed
}

model AuditLog {
  id          String      @id @default(cuid())
  userId      String?
  userEmail   String?
  userName    String?
  action      AuditAction
  entityType  String?
  entityId    String?
  entityName  String?
  details     String?     @db.Text
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime    @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@index([entityType])
}

model Ingredient {
  id         String   @id @default(cuid())
  name       String   @unique
  category   String
  subcategory String?
  isAlcoholic Boolean @default(false)
  baseSpirit String?
  createdAt  DateTime @default(now())

  cocktailIngredients CocktailIngredient[]
  barAvailability     BarAvailability?
  stock               Stock?

  @@index([name])
  @@index([category])
}

model Cocktail {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  type        String
  baseSpirit  String?
  glass       String
  ice         Boolean  @default(false)
  iceType     String?
  method      String   @db.Text
  garnish     String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ingredients CocktailIngredient[]

  @@index([name])
  @@index([baseSpirit])
}

model CocktailIngredient {
  id           String   @id @default(cuid())
  cocktailId   String
  ingredientId String
  quantity     Decimal? @db.Decimal(10, 2)
  unit         String?
  isOptional   Boolean  @default(false)

  cocktail   Cocktail   @relation(fields: [cocktailId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@index([cocktailId])
  @@index([ingredientId])
}

model BarAvailability {
  id           String   @id @default(cuid())
  ingredientId String   @unique
  available    Boolean  @default(false)
  updatedAt    DateTime @updatedAt

  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
}

model Stock {
  id              String   @id @default(cuid())
  ingredientId    String   @unique
  quantity        Decimal  @default(0) @db.Decimal(10, 2)
  unit            String   @default("ml")
  minThreshold    Decimal? @db.Decimal(10, 2)
  maxThreshold    Decimal? @db.Decimal(10, 2)
  lastRestockDate DateTime?
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())

  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  movements  StockMovement[]

  @@index([ingredientId])
}

enum MovementType {
  restock
  usage
  adjustment
  waste
}

model StockMovement {
  id           String       @id @default(cuid())
  stockId      String
  type         MovementType
  quantity     Decimal      @db.Decimal(10, 2)
  unit         String
  reason       String?
  userId       String?
  createdAt    DateTime     @default(now())

  stock Stock @relation(fields: [stockId], references: [id], onDelete: Cascade)

  @@index([stockId])
  @@index([createdAt])
}
